@model MiPracticaDataFirst.Models.Empleado

@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="card shadow-lg rounded-2">
    <div class="card-header text-black">
        <h4>Empleado Nuevo</h4>
    </div>
    <div class="card-body">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
